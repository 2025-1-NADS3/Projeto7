<?xml version="1.0" encoding="utf-8"?>
<!-- Tela com rolagem: "Fale Conosco" -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header (barra superior com botão de voltar e título) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/btnVoltar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/btn_voltar"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fale Conosco"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <View
                android:layout_width="42dp"
                android:layout_height="42dp"/>
        </LinearLayout>

        <!-- Informações de contato -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entre em contato conosco"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: suporte@fecapwallet.com"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone: (11) 1234-5678"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Campo de mensagem -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensagem"
            android:textColor="#7E848D"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/edtMensagem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background"
            android:gravity="top"
            android:hint="Digite sua mensagem"
            android:inputType="textMultiLine"/>

        <!-- Botão de envio -->
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Enviar Mensagem"
            android:textColor="#FFFFFF"
            android:backgroundTint="#20403D"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</ScrollView>