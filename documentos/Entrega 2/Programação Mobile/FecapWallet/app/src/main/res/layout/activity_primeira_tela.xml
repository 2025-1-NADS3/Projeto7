<?xml version="1.0" encoding="utf-8"?>
<!-- Tela inicial com layout em ConstraintLayout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Imagem ilustrativa do carrossel -->
    <ImageView
        android:id="@+id/img_primeira_tela"
        android:layout_width="303dp"
        android:layout_height="321dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/img1"
        tools:ignore="ContentDescription" />

    <!-- Título da tela -->
    <TextView
        android:id="@+id/txt_titulo_primeira_tela"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:text="Pagamento mais rápido do mundo"
        android:textAlignment="center"
        android:textColor="@color/txtH1"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <!-- Subtítulo da tela -->
    <TextView
        android:id="@+id/text_subtitulo_primeira_tela"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Integre vários métodos de pagamento para ajudar a agilizar o processo"
        android:textAlignment="center"
        android:textColor="@color/txtP"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <!-- Botão "Próximo" -->
    <Button
        android:id="@+id/btn_proximo_primeira_tela"
        android:layout_width="275dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/btnProximo"
        android:text="Próximo"
        android:fontFamily="@font/poppinsmedium"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>